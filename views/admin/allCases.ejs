<div class="container mt-5">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Cases <%=allCases.length%></h3>
          <form action="/admin/cases" method="GET" class="form-inline" >
            <div class="form-group" style="width: 100%;">
                <input class="form-control" type="text" name="search" placeholder="Search"  style="width: 80%;" required>
                <button class="btn btn-lg btn-primary ml-2">Search</button>
            </div>
          </form>
        </div>
        <div class="panel-body mt-4">
          <table class="table table-striped table-hover">
              <tr>
                <th>Name</th>
                <th>Subject</th>
                <th>Mobile No.</th>
                <th>Status</th>
                <th>Created on</th>
                <th>Attachement</th>
              </tr>
            <% allCases.forEach(function(acase){ %>
              <tr>
                <td><%=acase.user.name%></td>
                <td><a href="/admin/cases/<%=acase._id%>" style="color: blue;"><%=acase.subject%></a></td>
                <td><%=acase.mobileNo%></td>
                <td><%=acase.status.toUpperCase()%></td>
                <td><%=acase.created.toDateString()%></td>
                <td><% if (acase.attachement) { %>
                  <a href="/<%=acase.attachement%>">attachment</a>
                  <%} else { %>
                  <span>No attachment</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
            </table>
        </div>
      </div>
</div>
